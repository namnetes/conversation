import os

# Fonction pour lire les informations du proxy depuis le fichier
def read_proxy_info():
    proxy_info_file = os.path.join(os.getcwd(), "proxy.txt")
    
    if os.path.exists(proxy_info_file):
        with open(proxy_info_file, 'r') as file:
            proxy_info = file.readline().strip()
        return proxy_info
    else:
        return None

# Utiliser la fonction pour rÃ©cupÃ©rer les informations du proxy
proxy_info = read_proxy_info()

# Si des informations de proxy sont disponibles, les utiliser dans le module pytube
if proxy_info:
    from pytube import request
    
    # Mettre en place les informations du proxy pour pytube
    request.ProxyHandler(proxy_info)
    print(f"Proxy utilisÃ© : {proxy_info}")
else:
    print("Aucune information de proxy n'a Ã©tÃ© trouvÃ©e.")