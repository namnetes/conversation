public class PlatformChecker {

    public static void main(String[] args) {
        String os = System.getProperty("os.name").toLowerCase();

        if (os.contains("win")) {
            System.out.println("La plateforme d'exécution est Windows.");
        } else if (os.contains("unix") || os.contains("linux")) {
            System.out.println("La plateforme d'exécution est USS (Unix System Services).");
        } else {
            System.out.println("La plateforme d'exécution n'est ni Windows ni USS.");
        }
    }
}
